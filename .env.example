# ============ 交易所配置 ============

# Nado 配置
NADO_PRIVATE_KEY=your_nado_private_key_here
NADO_NETWORK=inkMainnet

# Lighter 配置
LIGHTER_PRIVATE_KEY=your_lighter_private_key_here
LIGHTER_ACCOUNT_INDEX=0
LIGHTER_API_KEY_INDEX=0

# ============ 对冲配置 ============

HEDGE_COIN=BTC
HEDGE_SIZE=0.002
HEDGE_SLIPPAGE=0.001
HEDGE_ORDER_TYPE=ioc

# 循环配置
HEDGE_LOOP_COUNT=1
HEDGE_LOOP_HOLD_TIME=0
HEDGE_LOOP_INTERVAL=0
HEDGE_LOOP_STOP_ON_ERROR=false

# ============ 风控配置 ============

# 最大单边持仓（BTC 数量）
MAX_POSITION_SIZE=0.1

# 最大总敞口（BTC 数量）
MAX_TOTAL_EXPOSURE=1.0

# 最大挂单数量
MAX_OPEN_ORDERS=10

# 最大滑点（百分比，0.005 = 0.5%）
MAX_SLIPPAGE=0.005

# 单笔最大亏损（美元）
MAX_LOSS_PER_TRADE=100

# 每日最大亏损（美元）
MAX_DAILY_LOSS=1000

# 紧急止损阈值（美元）
EMERGENCY_STOP_LOSS=5000

# ============ 手续费配置 ============

# Nado 手续费
NADO_TAKER_FEE=0.0015
NADO_MAKER_FEE=-0.0008

# Lighter 手续费
LIGHTER_TAKER_FEE=0.001
LIGHTER_MAKER_FEE=0

# 最小利润阈值（美元）
MIN_PROFIT_THRESHOLD=0

# ============ Telegram 通知 ============

# 是否启用 Telegram 通知
TELEGRAM_ENABLED=false

# Telegram Bot Token（从 @BotFather 获取）
TELEGRAM_BOT_TOKEN=

# Telegram Chat ID（发送消息给谁）
TELEGRAM_CHAT_ID=

# ============ 日志配置 ============

# 日志级别：trace, debug, info, warn, error
LOG_LEVEL=info

# 是否使用美化输出（开发环境建议 true）
LOG_PRETTY=true

# 环境：development, production
NODE_ENV=development
